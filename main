import random
import replit
print("Welcome to the number guessing game!")
print("I'm thinking of a number between 1 and 100.")
difficulty = input("Choose a difficulty. Type 'easy' or 'hard': ")
  
def difficulty_setting():
  if difficulty == "easy":
    return 4
  elif difficulty == "hard":
    return 9
  
attempts = difficulty_setting()
  
number = random.randint(1, 100)
print(f"Psst the number is {number}.")
  
def attempt():
  guess = int(input("Make a guess: "))
  if guess == number:
    return guess
  elif guess < number:
    print("Too low.")
  elif guess > number:
    print("Too high")
      
def run_the_game():
  while attempt() != number:
    attempt()
  else:
    print("You won!!")

run_the_game()
 
